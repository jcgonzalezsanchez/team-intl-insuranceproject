@page
@model TS.WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h3 class="center-align indigo-text text-darken-2">Sales</h3>

<br />

<div>
    <a asp-page="./Customers/Add" class="waves-effect waves-light btn white-text blue darken-2">New Sale</a>
</div>

<br />

<form method="post">
    <table class="responsive-table striped container">
        <thead>

            <tr class="light white-text indigo darken-2">
                <th class="center-align">Name</th>
                <th class="center-align">Last Name</th>
                <th class="center-align">Document</th>
                <th class="center-align">Number</th>
                <th class="center-align">Birth Day</th>
                <th class="center-align">City</th>
                <th class="center-align">Brand</th>
                <th class="center-align">Model</th>
                <th class="center-align">Year</th>
                <th class="center-align">Qute</th>
                <th class="center-align"></th>
                <th class="center-align"></th>
                <th class="center-align"></th>

            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <td class="blue-text text-darken-4 center-align">@item.Name</td>
                    <td class="blue-text text-darken-4 center-align">@item.LastName</td>
                    <td class="blue-text text-darken-4 center-align">@item.DocumentType</td>
                    <td class="blue-text text-darken-4 center-align">@item.Nit</td>
                    <td class="blue-text text-darken-4 center-align">@item.BirthDay</td>
                    <td class="blue-text text-darken-4 center-align">@item.City</td>

                    @foreach (var car in item.Cars)
                    {
                        <td class="blue-text text-darken-4 center-align">@car.Brand</td>
                        <td class="blue-text text-darken-4 center-align">@car.Model</td>
                        <td class="blue-text text-darken-4 center-align">@car.Year</td>
                    }


                    <td class="right-align">
                        <a asp-page="./Customers/Index"
                           class="waves-effect waves-light btn white-text blue darken-2">Opt_Customer</a>
                    </td>

                    <td class="right-align">
                        <a asp-page="./Cars/Index"
                           class="waves-effect waves-light btn white-text blue darken-2">Opt_Car</a>
                    </td>

                    <td class="right-align">
                        <a asp-page="./Customers/Index"
                           class="waves-effect waves-light btn white-text blue darken-2">QUOTE</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</form>

