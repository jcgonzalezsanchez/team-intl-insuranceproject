@page
@model TS.WebApp.Pages.Cars.AddModel
@{
    ViewData["Title"] = "Add";
}

<div class="center-align">
    <h3 class="card-panel teal lighten-2">New Car</h3>
</div>

<div class="row center-align">
    <form method="post" class="col s12">
        <input hidden asp-for="CustomerId" />
        <div>
            <div class="row">
                <div class="input-field col s12 m3 l4">
                    <input id="brand" type="text" class="validate" asp-for="Car.Brand">
                    <label for="brand">Brand</label>
                </div>
                <div class="input-field col s12 m3 l4">
                    <input id="model" type="text" class="validate" asp-for="Car.Model">
                    <label for="model">Model</label>
                </div>
                <div class="input-field col s12 m3 l4">
                    <input id="year" type="number" class="validate" asp-for="Car.Year">
                    <label for="year">Year</label>
                </div>
            </div>
        </div>

        <div class="center-align">
            <button type="submit" class="waves-effect waves-light btn white-text blue darken-1">
                Save
            </button>
            <a asp-page="../Customers/Index" class="waves-effect waves-light btn white-text blue darken-1">Return</a>
        </div>

    </form>
</div>

