@page
@model TS.WebApp.Pages.Cars.IndexModel
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<h3 class="center-align indigo-text text-darken-2">Cars</h3>

<br />

<div class="center-align">
    <a asp-page="../Customers/Index" class="waves-effect waves-light btn white-text blue darken-2">RETURN TO CUSTOMERS TO CREATE A NEW CAR</a>

    <a asp-page="../Index" class="waves-effect pulse waves-light btn white-text blue darken-2">Return to begin</a>
</div>
<br />

<form method="post">

    <table class="responsive-table striped">
        <thead>


            <tr class="light white-text card-panel indigo darken-2">

                <th class="center-align">Brand</th>
                <th class="center-align">Model</th>
                <th class="center-align">Year</th>
                <th class="center-align">Data Customer</th>
                <th class="center-align"></th>
                <th class="center-align"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cars)
            {
            <tr>
                <td>@item.Brand</td>
                <td>@item.Model</td>
                <td>@item.Year</td>

                <!--Falta cargar información del cliente-->

                <td>

                    <a class="waves-effect waves-light btn white-text blue darken-2"
                       asp-route-id="@item.Id"
                       asp-page="Edit">
                        Edit
                    </a>

                </td>

                <td>
                    <button type="submit"
                            class="waves-effect waves-light btn white-text blue darken-2"
                            asp-page-handler="delete"
                            asp-route-id="@item.Id">
                        Delete
                    </button>
                </td>

                <td>
                    <a asp-route-carid="@item.Id"
                       asp-page="../Insurances/Add"
                       class="waves-effect waves-light btn white-text blue darken-2">
                        Confirm quote
                    </a>

                </td>
            </tr>
            }
        </tbody>
    </table>
</form>