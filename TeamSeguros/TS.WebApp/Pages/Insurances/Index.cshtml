@page
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@model TS.WebApp.Pages.Insurances.IndexModel
@{
}

<h2 class="center-align card-panel teal lighten-2">Insurances</h2>

<div class="center-align">
       <a asp-page="../Index" class="waves-effect waves-light btn white-text blue darken-1">Return to begin</a>
</div>

<br />

<form method="post">
    <table class="responsive-table white-text deep-purple darken-1">
        <thead>


            <tr>
                <th>Price</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.Insurances)
            {
                <tr>
                    <td>@item.Price</td>

                    <td>
                        <button type="submit"
                                class="waves-effect waves-light btn white-text blue darken-1"
                                asp-page-handler="delete"
                                asp-route-id="@item.Id">
                            Delete
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>