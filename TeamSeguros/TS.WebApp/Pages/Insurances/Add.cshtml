@page
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@model TS.WebApp.Pages.Insurances.AddModel
@{
    ViewData["Title"] = "Add";
}


<div class="center-align">
    <h3 class="card-panel teal lighten-2">New Insurance</h3>
</div>

<div class="row center-align">
    <form method="post" class="col s12">
        <input asp-for="@Model.Car.CustomerId" />
        <div>
            <div class="row">
                <div class="input-field col s12 m3 l4">
                    <input asp-for="@Model.TotalAPagar" />
                    <label for="brand">Price</label>
                </div>
            </div>
        </div>

        <div class="center-align">
            <button type="submit" class="waves-effect waves-light btn white-text blue darken-2">
                Save
            </button>
            <a asp-page="../Customers/Index" class="waves-effect waves-light btn white-text blue darken-2">Return</a>
        </div>

    </form>
    
</div>