@page
@model TS.WebApp.Pages.Customers.IndexModel
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<h2 class="center-align card-panel teal lighten-2">CUSTOMERS</h2>

<a asp-page="Add" class="waves-effect waves-light btn white-text blue darken-1">Create new Customer</a>

<form method="post">
    <table class="responsive-table white-text deep-purple darken-1">
        <thead>
            <tr>
                <th>Name</th>
                <th>LastName</th>
                <th>DocumentType</th>
                <th>Nit</th>
                <th>BirthDay</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.DocumentType</td>
                <td>@item.Nit</td>
                <td>@item.BirthDay</td>
                <td>@item.City</td>

                <!--Queda faltando la parte donde se carga la información del
                    carro cuando ya este costruida esa etapa-->

                <!--Campo para el boton edit-->

                <td>
                    <button type="submit"
                            class="waves-effect waves-light btn white-text blue darken-1"
                            asp-page-handler="delete"
                            asp-route-id="@item.Id">
                        Delete
                    </button>

                    <!--eSPACIO PARA EN BOTON CARS-->

                </td>
            </tr>
            }
        </tbody>
    </table>
</form>
